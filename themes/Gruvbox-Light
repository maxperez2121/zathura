set window-width    1100
set window-height   640

set font                        "Fira Mono 8"
set default-fg                  "#262626" #00
set default-bg                  "#ebdbb2" #01

set statusbar-bg                "#ebdbb2" #04
set statusbar-fg                "#262626" #01

set inputbar-fg                 "#262626" #00 currently not used
set inputbar-bg                 "#ebdbb2" #02

set notification-error-fg       "#262626" #08
set notification-error-bg       "#cc241d" #00

set notification-warning-fg     "#262626" #08
set notification-warning-bg     "#d79921" #00

set highlight-color             "#ebdbb2" #0D
set highlight-active-color      "#262626" #0A

set completion-highlight-bg     "#4e4e4e" #02
set completion-highlight-fg     "#87afaf" #0C

set completion-fg               "#4e4e4e" #02
set completion-bg               "#ebdbb2" #0C

set notification-fg             "#262626" #0B
set notification-bg             "#458588" #00

set recolor-lightcolor          "#ebdbb2" #06
set recolor-darkcolor           "#262626" #00
set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue "false"
set adjust_window "best-fit"

set selection-clipboard "clipboard"

# keybindings
map [fullscreen] a adjust_window best-fit
map [fullscreen] s adjust_window width
map [fullscreen] f follow
map [fullscreen] <Tab> toggle_index
map [fullscreen] j scroll down
map [fullscreen] k scroll up
map [fullscreen] h navigate previous
map [fullscreen] l navigate next
